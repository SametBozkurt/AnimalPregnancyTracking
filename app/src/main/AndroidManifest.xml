        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_new_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-9721232821183013~3399623800" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".ActivityAyarlar"
            android:label="@string/title_activity_ayarlar"
            android:theme="@style/NoActionBar" />

        <activity
            android:name=".ActivityAppInfo"
            android:label="@string/activity_info_title"
            android:screenOrientation="locked"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ActivityTumKayitlar"
