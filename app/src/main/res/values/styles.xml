<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="NoActionBar" parent="Theme.MaterialComponents.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_2</item>
    </style>
    <style name="NoActionBar2" parent="Theme.MaterialComponents.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/kayit_bul_title_layout_background</item>
        <item name="colorPrimary">@color/kayit_bul_title_color_primary</item>
    </style>
    <style name="NoActionBar3" parent="Theme.MaterialComponents.Light">
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_2</item>
    </style>

    <style name="NoActionBar4" parent="Theme.MaterialComponents.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#37474f</item>
        <item name="colorPrimaryDark">#37474f</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="STYLE_WARNING_TEXT" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/textView_uyari_size</item>
        <item name="android:textColor">@color/materyal_gri</item>
    </style>

    <style name="PickerTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/colorAccentPicker</item>
        <item name="colorAccent">@color/colorAccentPicker</item>
        <item name="materialButtonStyle">@style/PickerButtonStyle</item>
        <item name="android:datePickerMode">calendar</item>
    </style>

    <style name="PickerButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:colorPrimary">@android:color/background_light</item>
        <item name="android:textColor">@color/colorAccentPicker</item>
        <item name="rippleColor">@color/colorAccentPicker</item>
    </style>
    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/colorAccentPicker</item>
        <item name="materialButtonStyle">@style/PickerButtonStyle</item>
    </style>
    <style name="FABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@android:color/background_light</item>
    </style>
    <style name="KayitBulInputStyle" parent="@style/Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@android:color/background_light</item>
        <item name="android:backgroundTint">@android:color/background_light</item>
        <item name="android:colorControlNormal">@android:color/background_light</item>
        <item name="hintTextColor">@android:color/background_light</item>
    </style>
    <style name="InputSearch" parent="Widget.AppCompat.EditText">
        <item name="android:colorControlActivated">@android:color/background_light</item>
        <item name="android:colorControlNormal">@android:color/background_light</item>
        <item name="android:backgroundTint">@android:color/background_light</item>
    </style>
    <style name="NoMatchesStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AppInfoDialogStyle" parent="Theme.MaterialComponents.Dialog">
        <item name="android:background">#fdd835</item>
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
    </style>
    <style name="OkButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@android:color/background_light</item>
        <item name="rippleColor">@android:color/background_light</item>
    </style>
    <style name="InputYeniKayit" parent="Widget.AppCompat.EditText">
        <item name="android:colorControlActivated">@color/input_background_tint</item>
        <item name="android:backgroundTint">@color/input_background_tint</item>
    </style>
    <style name="KayitEkleInputStyle" parent="@style/Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/input_background_tint</item>
        <item name="hintTextColor">@color/input_background_tint</item>
    </style>
    <style name="PhotoPickerDialogStyle" parent="Theme.MaterialComponents.Dialog">
        <item name="android:background">#ffeb3b</item>
        <item name="dialogCornerRadius">10dp</item>
    </style>
    <style name="ButtonEffect1" parent="Widget.AppCompat.Button.Borderless">
        <item name="itemRippleColor">#ffffff</item>
        <item name="rippleColor">#ffffff</item>
    </style>
</resources>
