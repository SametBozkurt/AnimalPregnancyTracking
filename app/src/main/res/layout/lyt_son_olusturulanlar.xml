<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sonOlusturulanlar"
        android:textColor="@android:color/white"
        android:fontFamily="@font/comfortaa_bold"
        android:padding="@dimen/margin_kategori_3"
        android:textSize="16sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_kategori_1"
        android:layout_marginEnd="@dimen/margin_kategori_1"
        android:layout_gravity="center_horizontal"
        android:id="@+id/recyclerViewSonOlusturulanlar"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/ripple_effect2"
        android:id="@+id/showAll"
        android:focusable="true"
        android:clickable="true"
        android:padding="@dimen/margin_kategori_1"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_forward"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tumGoster"
            android:textColor="@android:color/white"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/open_sans"
            android:textSize="15sp"/>

    </LinearLayout>

</LinearLayout>
