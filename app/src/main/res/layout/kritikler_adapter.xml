<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    app:cardBackgroundColor="#eeeeee"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:strokeWidth="2dp"
    app:strokeColor="#BFBFBF"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/margin_kategori_1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_kategori_1"
            android:layout_gravity="top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_clock"
                android:id="@+id/img_clock"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/txt_durum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_number"
                android:fontFamily="@font/comfortaa_bold"
                android:layout_marginStart="@dimen/margin_kategori_1"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_isim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_kategori_2"
            android:text="@string/app_name"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="@dimen/margin_kategori_1"
            android:layout_marginBottom="@dimen/margin_kategori_1"
            android:fontFamily="@font/comfortaa_bold" />

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>