<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:id="@+id/cardView"
    app:cardBackgroundColor="#37474f"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:strokeWidth="2dp"
    app:strokeColor="#BFBFBF"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/margin_kategori_1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/photo"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:contentDescription="@null"/>

    <FrameLayout
        android:background="#40000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_kategori_1"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_clock"
                android:contentDescription="@null"
                app:tint="@android:color/background_light" />

            <TextView
                android:id="@+id/txt_durum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_number"
                android:textColor="@android:color/background_light"
                android:fontFamily="@font/comfortaa_bold"
                android:layout_marginStart="@dimen/margin_kategori_1"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </FrameLayout>

    <ImageView
        android:id="@+id/img_hayvan"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:elevation="2dp"
        android:contentDescription="@null"
        app:tint="#fff" />

    <TextView
        android:id="@+id/txt_isim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_kategori_2"
        android:text="@string/app_name"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="@dimen/margin_kategori_1"
        android:layout_marginBottom="@dimen/margin_kategori_1"
        android:textColor="@android:color/background_light"
        android:fontFamily="@font/comfortaa_bold" />

</com.google.android.material.card.MaterialCardView>