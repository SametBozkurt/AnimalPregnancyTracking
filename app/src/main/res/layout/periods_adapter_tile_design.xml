<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:strokeWidth="2dp"
    app:strokeColor="#BFBFBF"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/margin_kategori_1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_kategori_2"
        android:layout_gravity="bottom|start"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_clock"
            android:contentDescription="@null"
            app:tint="#37474f" />

        <TextView
            android:id="@+id/txt_gun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_number"
            android:textColor="#37474f"
            android:fontFamily="@font/comfortaa_bold"
            android:layout_marginStart="@dimen/margin_kategori_1"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_hayvan"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:elevation="2dp"
        android:layout_marginBottom="@dimen/margin_kategori_3"
        android:contentDescription="@null"
        app:tint="#37474f" />

</com.google.android.material.card.MaterialCardView>