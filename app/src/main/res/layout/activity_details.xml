<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background"
    tools:context="com.abcd.hayvandogumtakibi2.ActivityDetails">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/layout_background"
            android:orientation="vertical"
            tools:context="com.abcd.hayvandogumtakibi2.ActivityDetails">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_kategori_3"
                android:background="@color/button_background_2">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/img_hayvan"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin_kategori_4"
                    app:civ_circle_background_color="@color/layout_background"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@android:color/background_dark" />

                <TextView
                    android:id="@+id/txt_isim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/img_hayvan"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="@dimen/margin_kategori_3"
                    android:backgroundTint="@color/button_background_2"
                    android:fontFamily="@font/comfortaa_bold"
                    android:text="@string/app_name"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/btn_edit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ripple_effect"
                    android:src="@drawable/button_duzenle_icon"
                    android:tint="@android:color/background_light"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin_kategori_3"
                    android:layout_marginEnd="@dimen/margin_kategori_3"
                    android:contentDescription="@null"
                    android:clickable="true"
                    android:focusable="true" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_style"
                android:layout_marginTop="@dimen/margin_kategori_2"
                android:layout_marginStart="@dimen/margin_kategori_1"
                android:layout_marginEnd="@dimen/margin_kategori_1">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:contentDescription="@null"
                    android:src="@drawable/icon_tag"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/button_background_2"
                    android:layout_marginStart="@dimen/margin_kategori_1" />

                <TextView
                    android:id="@+id/txt_kupe_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_kategori_2"
                    android:fontFamily="@font/comfortaa_bold"
                    android:layout_gravity="center_vertical"
                    android:text="@string/listview_kupe_no"
                    android:textSize="16sp"
                    android:textColor="@color/button_background_2" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_style"
                android:layout_marginTop="@dimen/margin_kategori_2"
                android:layout_marginStart="@dimen/margin_kategori_1"
                android:layout_marginEnd="@dimen/margin_kategori_1">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:contentDescription="@null"
                    android:src="@drawable/icon_model"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/button_background_2"
                    android:layout_marginStart="@dimen/margin_kategori_1" />

                <TextView
                    android:id="@+id/txt_tur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_bold"
                    android:layout_gravity="center_vertical"
                    android:text="@string/listView_tur"
                    android:textSize="16sp"
                    android:layout_marginStart="@dimen/margin_kategori_2"
                    android:textColor="@color/button_background_2" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_style"
                android:layout_marginTop="@dimen/margin_kategori_2"
                android:layout_marginStart="@dimen/margin_kategori_1"
                android:layout_marginEnd="@dimen/margin_kategori_1">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:contentDescription="@null"
                    android:src="@drawable/icon_calendar"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/button_background_2"
                    android:layout_marginStart="@dimen/margin_kategori_1" />

                <TextView
                    android:id="@+id/txt_tarih1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_bold"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_kategori_2"
                    android:text="@string/listView_tarih1"
                    android:textSize="16sp"
                    android:textColor="@color/button_background_2" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_style"
                android:layout_marginTop="@dimen/margin_kategori_2"
                android:layout_marginStart="@dimen/margin_kategori_1"
                android:layout_marginEnd="@dimen/margin_kategori_1">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:contentDescription="@null"
                    android:src="@drawable/icon_calendar"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/button_background_2"
                    android:layout_marginStart="@dimen/margin_kategori_1" />

                <TextView
                    android:id="@+id/txt_tarih2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_kategori_2"
                    android:fontFamily="@font/comfortaa_bold"
                    android:layout_gravity="center_vertical"
                    android:text="@string/listView_tarih2"
                    android:textSize="16sp"
                    android:textColor="@color/button_background_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/icon_clock"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/margin_kategori_3"
                    android:tint="@color/button_background_2"
                    android:contentDescription="@null"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_kalan_gun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/comfortaa_bold"
                        android:text="@string/test_number"
                        android:textColor="@color/button_background_2"
                        android:textSize="48sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/comfortaa_bold"
                        android:text="@string/txt_day"
                        android:textColor="@color/button_background_2"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>