<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    app:cardBackgroundColor="@color/card_background_tint"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/margin_kategori_1">

    <LinearLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_hayvan"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="@dimen/margin_kategori_2"
            android:layout_marginBottom="@dimen/margin_kategori_2"
            android:src="@drawable/icon_cat"
            android:elevation="2dp"
            android:layout_gravity="center_horizontal"
            app:civ_circle_background_color="@color/image_background"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/background_dark"
            android:contentDescription="@null"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fab_tint"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_isim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_kategori_2"
                android:text="@string/ozel_listview_isim"
                android:textColor="@android:color/background_light"
                android:fontFamily="@font/comfortaa_bold"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>