<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1E88E5"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_kategori_2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/per_icon"
                android:src="@drawable/ic_photo_camera"
                android:contentDescription="@null"
                app:tint="#fff" />

            <TextView
                android:id="@+id/per_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_kategori_1"
                android:layout_marginEnd="@dimen/margin_kategori_1"
                android:text="@string/cam_per_title"
                android:textSize="15sp"
                android:textColor="#fff"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <TextView
            android:id="@+id/per_explanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cam_per_exp"
            android:textColor="#fff"
            android:layout_below="@id/title_layout"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_kategori_2"
            android:layout_marginStart="@dimen/margin_kategori_2"
            android:layout_marginEnd="@dimen/margin_kategori_2"
            android:layout_marginBottom="@dimen/margin_kategori_2"
            android:textSize="15sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ok"
            style="@style/OkButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/per_explanation"
            android:layout_centerHorizontal="true"
            android:text="@string/text_okay"
            android:textColor="#fff"
            app:strokeColor="#fff"
            app:strokeWidth="2dp"
            app:icon="@drawable/icon_thumb_up"
            app:iconTint="#fff"
            android:layout_marginTop="@dimen/margin_kategori_1"
            android:layout_marginBottom="@dimen/margin_kategori_3" />

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>