<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E88E5"
            android:id="@+id/frame_layout">

            <LinearLayout
                android:id="@+id/title_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin_kategori_2"
                android:layout_marginTop="@dimen/margin_kategori_2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/per_icon"
                    android:src="@drawable/ic_photo_camera"
                    android:contentDescription="@null"
                    app:tint="#fff" />

                <TextView
                    android:id="@+id/per_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_kategori_1"
                    android:layout_marginEnd="@dimen/margin_kategori_1"
                    android:fontFamily="@font/comfortaa_bold"
                    android:text="@string/cam_per_title"
                    android:textColor="#fff"
                    android:textSize="15sp" />

            </LinearLayout>

        </FrameLayout>


        <TextView
            android:id="@+id/per_explanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/frame_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/margin_kategori_2"
            android:layout_marginTop="@dimen/margin_kategori_2"
            android:layout_marginEnd="@dimen/margin_kategori_2"
            android:layout_marginBottom="@dimen/margin_kategori_2"
            android:fontFamily="@font/comfortaa_bold"
            android:gravity="center_horizontal"
            android:text="@string/cam_per_exp"
            android:textColor="#000"
            android:textSize="15sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/per_explanation"
            android:layout_centerHorizontal="true"
            android:text="@string/text_okay"
            android:textColor="#000"
            app:strokeColor="#000000"
            app:strokeWidth="2dp"
            app:icon="@drawable/icon_thumb_up"
            app:iconTint="#000"
            android:layout_marginTop="@dimen/margin_kategori_1"
            android:layout_marginBottom="@dimen/margin_kategori_3"
            style="@style/OkButtonStyle" />

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>