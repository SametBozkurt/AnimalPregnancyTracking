<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/edit_periods"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/josefin_sans_semibold"
            android:gravity="center_horizontal"
            android:padding="@dimen/margin_kategori_3"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/img_reset"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/margin_kategori_1"
            android:layout_marginEnd="@dimen/margin_kategori_1"
            android:src="@drawable/ic_undo"
            android:contentDescription="@null"
            android:focusable="true"/>

        <LinearLayout
            android:id="@+id/lyt_period_cow"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_text">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:scaleX="@dimen/image_scale"
                android:scaleY="@dimen/image_scale"
                android:src="@mipmap/cow"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/period_cow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/margin_kategori_4"
                android:paddingEnd="@dimen/margin_kategori_4"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:maxLength="3"
                android:lines="1"
                android:fontFamily="@font/comfortaa_bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_period_sheep"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_text">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sheep"
                android:scaleType="fitCenter"
                android:scaleX="@dimen/image_scale"
                android:scaleY="@dimen/image_scale"
                android:adjustViewBounds="true"
                android:contentDescription="@null"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/period_sheep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:paddingStart="@dimen/margin_kategori_4"
                android:paddingEnd="@dimen/margin_kategori_4"
                android:maxLength="3"
                android:lines="1"
                android:fontFamily="@font/comfortaa_bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_period_goat"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lyt_period_cow">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/goat"
                android:scaleType="fitCenter"
                android:scaleX="@dimen/image_scale"
                android:scaleY="@dimen/image_scale"
                android:adjustViewBounds="true"
                android:contentDescription="@null"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/period_goat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:paddingStart="@dimen/margin_kategori_4"
                android:paddingEnd="@dimen/margin_kategori_4"
                android:maxLength="3"
                android:lines="1"
                android:fontFamily="@font/comfortaa_bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_period_cat"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lyt_period_sheep">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/cat"
                android:scaleType="fitCenter"
                android:scaleX="@dimen/image_scale"
                android:scaleY="@dimen/image_scale"
                android:adjustViewBounds="true"
                android:contentDescription="@null"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/period_cat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:paddingStart="@dimen/margin_kategori_4"
                android:paddingEnd="@dimen/margin_kategori_4"
                android:maxLength="3"
                android:lines="1"
                android:fontFamily="@font/comfortaa_bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_period_dog"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lyt_period_goat">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dog"
                android:scaleType="fitCenter"
                android:scaleX="@dimen/image_scale"
                android:scaleY="@dimen/image_scale"
                android:adjustViewBounds="true"
                android:contentDescription="@null" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/period_dog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:paddingStart="@dimen/margin_kategori_4"
                android:paddingEnd="@dimen/margin_kategori_4"
                android:maxLength="3"
                android:lines="1"
                android:fontFamily="@font/comfortaa_bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_period_hamster"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lyt_period_cat">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/hamster"
                android:scaleType="fitCenter"
                android:scaleX="@dimen/image_scale"
                android:scaleY="@dimen/image_scale"
                android:adjustViewBounds="true"
                android:contentDescription="@null"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/period_hamster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:paddingStart="@dimen/margin_kategori_4"
                android:paddingEnd="@dimen/margin_kategori_4"
                android:maxLength="3"
                android:lines="1"
                android:fontFamily="@font/comfortaa_bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_period_horse"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lyt_period_dog">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/horse"
                android:scaleType="fitCenter"
                android:scaleX="@dimen/image_scale"
                android:scaleY="@dimen/image_scale"
                android:adjustViewBounds="true"
                android:contentDescription="@null" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/period_horse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:paddingStart="@dimen/margin_kategori_4"
                android:paddingEnd="@dimen/margin_kategori_4"
                android:maxLength="3"
                android:lines="1"
                android:fontFamily="@font/comfortaa_bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_period_donkey"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lyt_period_hamster">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/donkey"
                android:scaleType="fitCenter"
                android:scaleX="@dimen/image_scale"
                android:scaleY="@dimen/image_scale"
                android:adjustViewBounds="true"
                android:contentDescription="@null" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/period_donkey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:paddingStart="@dimen/margin_kategori_4"
                android:paddingEnd="@dimen/margin_kategori_4"
                android:maxLength="3"
                android:lines="1"
                android:fontFamily="@font/comfortaa_bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_period_camel"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lyt_period_horse">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/camel"
                android:scaleType="fitCenter"
                android:scaleX="@dimen/image_scale"
                android:scaleY="@dimen/image_scale"
                android:adjustViewBounds="true"
                android:contentDescription="@null"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/period_camel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:maxLength="3"
                android:paddingStart="@dimen/margin_kategori_4"
                android:paddingEnd="@dimen/margin_kategori_4"
                android:lines="1"
                android:fontFamily="@font/comfortaa_bold"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/save_periods"
            android:text="@string/button_text_kaydet"
            app:layout_constraintTop_toBottomOf="@id/lyt_period_camel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="@dimen/margin_kategori_1"
            android:layout_marginBottom="@dimen/margin_kategori_1"
            style="@style/FilterButtonStyle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>