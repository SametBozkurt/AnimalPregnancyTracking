<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:background="#6a1b9a"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear_layout1"
        android:layout_marginStart="@dimen/margin_kategori_3"
        android:layout_marginTop="@dimen/margin_kategori_3"
        android:layout_marginEnd="@dimen/margin_kategori_3"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@null"
            android:elevation="@dimen/margin_kategori_1"
            android:src="@mipmap/icon_circular"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:gravity="center_horizontal"
                android:fontFamily="@font/comfortaa_bold"
                android:textColor="#fff"
                android:textSize="24sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_info_subtitle"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_kategori_1"
                android:fontFamily="@font/comfortaa_bold"
                android:textSize="13sp"
                android:textColor="#fff"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_kategori_3"
        app:layout_constraintTop_toBottomOf="@id/linear_layout1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lyt_version"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_information"
                android:contentDescription="@null"
                android:layout_margin="@dimen/margin_kategori_3"
                app:tint="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_version"
                android:text="@string/version"
                android:layout_marginEnd="@dimen/margin_kategori_3"
                android:layout_gravity="center_vertical"
                android:textColor="#fff"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lyt_policy"
            android:background="?attr/selectableItemBackground"
            android:focusable="true"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="@null"
                android:src="@drawable/icon_privacy"
                android:layout_margin="@dimen/margin_kategori_3"
                app:tint="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy"
                android:layout_marginEnd="@dimen/margin_kategori_3"
                android:layout_gravity="center_vertical"
                android:textColor="#fff"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/lyt_vote"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_google_play"
                android:layout_margin="@dimen/margin_kategori_3"
                app:tint="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vote"
                android:layout_marginEnd="@dimen/margin_kategori_3"
                android:layout_gravity="center_vertical"
                android:textColor="#fff"/>

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="@dimen/card_corner_radius"
        android:layout_margin="@dimen/margin_kategori_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/credit_headline"
                android:fontFamily="@font/comfortaa_bold"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/credit_body"
                android:fontFamily="@font/comfortaa_bold"
                android:layout_marginStart="@dimen/margin_kategori_1"
                android:layout_marginEnd="@dimen/margin_kategori_1"
                android:layout_marginTop="@dimen/margin_kategori_1"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/attribution1"
                android:layout_marginStart="@dimen/margin_kategori_1"
                android:layout_marginEnd="@dimen/margin_kategori_1"
                android:layout_marginTop="@dimen/margin_kategori_1"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/comfortaa_bold"
                android:textColor="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/attribution2"
                android:layout_marginStart="@dimen/margin_kategori_1"
                android:layout_marginEnd="@dimen/margin_kategori_1"
                android:layout_marginTop="@dimen/margin_kategori_1"
                android:layout_marginBottom="@dimen/margin_kategori_1"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/comfortaa_bold"
                android:textColor="#000"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>