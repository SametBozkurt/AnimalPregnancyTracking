<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    app:cardBackgroundColor="#eeeeee"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/margin_kategori_1">


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_margin="@dimen/margin_kategori_1"
        android:layout_gravity="center"
        app:cardCornerRadius="40dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img_hayvan"
            android:contentDescription="@null"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/txt_tur"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="#80FF9800"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_kategori_1"
        android:layout_marginTop="@dimen/margin_kategori_1"
        android:layout_gravity="top"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_clock"
            android:id="@+id/img_clock"
            app:tint="@android:color/black"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/txt_durum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_number"
            android:textColor="@android:color/black"
            android:fontFamily="@font/comfortaa_bold"
            android:layout_marginStart="@dimen/margin_kategori_1"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_isim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="@dimen/margin_kategori_1"
        android:layout_marginBottom="@dimen/margin_kategori_1"
        android:fontFamily="@font/comfortaa_bold" />

</com.google.android.material.card.MaterialCardView>